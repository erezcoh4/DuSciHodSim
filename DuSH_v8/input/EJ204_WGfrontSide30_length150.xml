<?xml version='1.0' encoding='utf-8'?>
<!--Eljen EJ204-->

<Scintillator>
    
    <refractiveIndex> 1.58  </refractiveIndex>
    <PhotonsPerMeV> 10400   </PhotonsPerMeV>    <!-- photon yield in MeVee -->
    <length> 2000           </length>           <!-- mm -->
    <width> 200             </width>            <!-- mm -->
    <thickness> 60          </thickness>        <!-- mm -->
    
    <!--EJ204 light attenuation length is 160 cm-->
    <AbsorbtionLength> 1600 </AbsorbtionLength> <!-- mm -->

</Scintillator>


<ProtonGun>
    
    <Energy> 2000           </Energy>           <!-- MeV -->
    <x> 0                   </x>                <!-- position in [mm] -->
    <y> -100                </y>                <!-- position in [mm] -->
    <z> 0                   </z>                <!-- position in [mm] -->
    <vx> 0                  </vx>               <!-- direction  -->
    <vy> 1                  </vy>               <!-- direction  -->
    <vz> 0                  </vz>               <!-- direction  -->

</ProtonGun>




<Display>
    
    <ShowEveryNPhotons> 1000 </ShowEveryNPhotons>

</Display>


<Waveguide>
    
    <WaveguideWidth>    30            </WaveguideWidth>   <!-- mm -->
    <WaveguideThickness>    30        </WaveguideThickness>   <!-- mm -->
    <WaveguideLength>   150             </WaveguideLength>  <!-- mm -->
    <WaveguideAbsorbtionLength>   10000  </WaveguideAbsorbtionLength>  <!-- mm -->
    <WaveguideRefractiveIndex>   1.58    </WaveguideRefractiveIndex>
    
</Waveguide>
